<Window x:Class="ControlzEx.Controls.GlowWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controlzEx="clr-namespace:ControlzEx.Controls"
        Title="GlowWindow"
        Width="4"
        Height="4"
        Background="Transparent"
        Opacity="0"
        ResizeMode="NoResize"
        ShowActivated="False"
        SnapsToDevicePixels="True"
        WindowStyle="None">

    <Window.Resources>
        <!--  use this storyboard for a smoother visibility  -->
        <Storyboard x:Key="OpacityStoryboard">
            <DoubleAnimation BeginTime="00:00:.2"
                             Storyboard.TargetName="glowWindow"
                             Storyboard.TargetProperty="(UIElement.Opacity)"
                             To="1"
                             Duration="00:00:.3" />
        </Storyboard>
    </Window.Resources>
    
    <Window.Template>
        <ControlTemplate TargetType="Window">
            <ContentPresenter />
        </ControlTemplate>
    </Window.Template>

    <controlzEx:Glow x:Name="glow"  
                     x:FieldModifier="private" />
</Window>
